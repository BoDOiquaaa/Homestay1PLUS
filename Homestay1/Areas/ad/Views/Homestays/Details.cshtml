@model Homestay1.Models.Homestay
@{
    ViewData["Title"] = "Chi tiết Homestay";
    Layout = "_AdminLayout";
}
<h2>@Model.Name</h2>
<div class="row mb-4">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" class="img-fluid" alt="@Model.Name" />
        }
    </div>
    <div class="col-md-8">
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Created At:</strong> @Model.CreatedAt:yyyy-MM-dd</p>
    </div>
</div>
<h3>Danh sách phòng</h3>
<table class="table table-bordered">
    <thead><tr><th>Ảnh phòng</th><th>Tên phòng</th><th>Giá/đêm</th><th>Trạng thái</th></tr></thead>
    <tbody>
        @foreach (var room in Model.Rooms)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(room.ImageUrl))
                    {
                        <img src="@Url.Content(room.ImageUrl)" class="img-thumbnail" style="max-width:100px;" alt="@room.RoomName" />
                    }
                </td>
                <td>@room.RoomName</td>
                <td>@room.PricePerNight:0.##</td>
                <td>@room.Status</td>
            </tr>
        }
    </tbody>
</table>
